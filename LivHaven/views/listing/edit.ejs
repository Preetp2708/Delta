<% layout('/layouts/boilerplate') -%>

<body style="background-color: #f4e3ce;">

  <div class="container py-5">

    <!-- Page Header -->
    <div class="text-center mb-4">
      <h1 class="h3 text-warning fw-bold">Edit Listing</h1>
      <p class="text-muted">Update the details for this listing below.</p>
    </div>

    <!-- Form Card -->
    <div class="card shadow-sm mx-auto" style="max-width: 700px; border-radius: 12px;">
      <div class="card-body p-4">

        <form action="/listing/<%= listing._id %>?_method=PUT" method="post" class="row g-3 needs-validation" novalidate enctype="multipart/form-data">

          <!-- Title -->
          <div class="col-12">
            <label for="title" class="form-label fw-semibold">Title:</label>
            <input type="text" class="form-control" id="title" name="listing[title]" value="<%= listing.title %>" placeholder="Enter title" required>
            <div class="invalid-feedback">Please enter title!</div>
          </div>

          <!-- Description -->
          <div class="col-12">
            <label for="description" class="form-label fw-semibold">Description:</label>
            <textarea class="form-control" id="description" name="listing[description]" rows="4" placeholder="Enter description" required><%= listing.description %></textarea>
            <div class="invalid-feedback">Please enter description!</div>
          </div>
          <!-- Preview Image -->
          <div class="col-12">
            <label class="form-label fw-semibold">Current Image:</label>
            <div class="mb-2">
              <img src="<%= originalImageUrl %>" alt="Current Listing Image" class="img-fluid" style="max-height: 300px; object-fit: cover;">
            </div>
          </div>
          <!-- Image URL -->
          <div class="col-12">
            <label for="image" class="form-label fw-semibold">Image (File):</label>
            <input type="file" class="form-control" id="image" name="listing[image]">
            <div class="form-text">Leave empty to keep the existing image.</div>
          </div>

          <!-- Price -->
          <div class="col-md-6">
            <label for="price" class="form-label fw-semibold">Price:</label>
            <input type="number" class="form-control" id="price" name="listing[price]" value="<%= listing.price %>" placeholder="Enter price" required>
            <div class="invalid-feedback">Please enter valid price!</div>
          </div>

          <!-- Location -->
          <div class="col-md-6">
            <label for="location" class="form-label fw-semibold">Location:</label>
            <input type="text" class="form-control" id="location" name="listing[location]" value="<%= listing.location %>" placeholder="Enter city/location" required>
            <div class="invalid-feedback">Please enter location!</div>
          </div>

          <!-- Country -->
          <div class="col-12">
            <label for="country" class="form-label fw-semibold">Country:</label>
            <input type="text" class="form-control" id="country" name="listing[country]" value="<%= listing.country %>" placeholder="Enter country" required>
            <div class="invalid-feedback">Please enter country!</div>
          </div>

          <!-- Submit Button -->
          <div class="col-12 text-center mt-3">
            <button type="submit" class="btn btn-warning btn-lg rounded-pill shadow-sm px-5">
              Update Listing
            </button>
          </div>

        </form>

      </div>
    </div>

  </div>
<!-- <script src="/JavaScript/script.js"></script> -->
</body>
